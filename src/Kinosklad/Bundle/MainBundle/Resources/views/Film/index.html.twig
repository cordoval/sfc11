<h1>Film list</h1>

<table class="records_list">
    <thead>
        <tr>
            <th>Id</th>
            <th>Name</th>
            <th>Title</th>
            <th>Image</th>
            <th>Length</th>
            <th>Country</th>
            <th>Premiere</th>
            <th>Description</th>
            <th>Links</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
    {% for entity in entities %}
        <tr>
            <td><a href="{{ path('films_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
            <td>{{ entity.name }}</td>
            <td>{{ entity.title }}</td>
            <td>{{ entity.image }}</td>
            <td>{{ entity.length }}</td>
            <td>{{ entity.country }}</td>
            <td>{% if entity.premiere %}{{ entity.premiere|date('Y-m-d H:i:s') }}{% endif%}</td>
            <td>{{ entity.description }}</td>
            <td>{{ entity.links }}</td>
            <td>
                <ul>
                    <li>
                        <a href="{{ path('films_show', { 'id': entity.id }) }}">show</a>
                    </li>
                    <li>
                        <a href="{{ path('films_edit', { 'id': entity.id }) }}">edit</a>
                    </li>
                </ul>
            </td>
        </tr>
    {% endfor %}
    </tbody>
</table>

<ul>
    <li>
        <a href="{{ path('films_new') }}">
            Create a new entry
        </a>
    </li>
</ul>
